---
import Layout from '../layouts/Layout.astro';
import Repos from '../components/Repos.svelte';
import Birthday from '../components/Birthday.svelte';
import { BASE_URL, GITHUB_URL } from '../utils/url';
const paths = ['general', 'contributions', 'languages'];
---

<Layout>
    <span>Hi, I'm LoryPelli</span>
    <Birthday client:only />
    <span>This is my portfolio</span>
    <span
        >I'm a developer and I'm really active on github (I should touch grass
        ik)</span
    >
    <div class="flex flex-col gap-y-1">
        {
            paths.map((p) => (
                <img src={`${BASE_URL}/${p}`} loading="lazy" decoding="async" />
            ))
        }
    </div>
    <span
        >Here is my github btw: <a
            href={GITHUB_URL}
            target="_blank"
            class="text-blue-600 hover:underline">{GITHUB_URL}</a
        ></span
    >
    <Repos client:only />
</Layout>
